@model List<ToDoMatrix.Models.TaskModel>
@{
    ViewData["Title"] = "Home Page";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h2 class="text-center">Stephen Covey's Time Management Matrix</h2>

<div class="container">
    <div class="row flex-nowrap">
        <div class="col"></div>
        <div class="col align-content-center">
            <h3>Urgent</h3>
        </div>
        <div class="col align-content-center">
            <h3>Not Urgent</h3>
        </div>
    </div>
    <div class="row flex-nowrap">
        <div class="col align-content-center">
            <h3>Important</h3>
        </div>
        <div class="col align-content-center">
            <h4 class="align-content-center text-center">Quadrant 1</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Task</td>
                        <td>Due Date</td>
                        <td>Category</td>
                        <td>Completed</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        @if (x.Urgent == "Q1")
                        {
                            <tr>
                                <td>@x.Task</td>
                                <td>@x.Date</td>
                                <td>@x.CategoryId</td>
                                <td>@x.Completed</td>
                                <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskId" class="btn btn-outline-dark">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId" class="btn btn-outline-success">Mark Task as Complete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col align-content-center">
